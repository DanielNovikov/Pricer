@page "/"

<PageTitle>Index</PageTitle>

<div id="navbar">
    <div id="navbar-logo">
        <img @onclick="ScrollToBanner" src="images/logo.png" id="logo">
    </div>

    <div id="navbar-links">
        <a @onclick="ScrollToFunctions">Функції</a>
        <a @onclick="ScrollToVideo">Користування</a>
        <a @onclick="ScrollToShops">Магазини</a>
    </div>
</div>

<div id="banner-container">
    <div id="banner-text">
        <p id="banner-title">Pricer</p>
        <p id="banner-description">Безкоштовний телеграм-бот, за допомогою якого Ви першим дізнаєтесь про зниження ціни на товар</p>
        <button id="banner-button">Почати користування</button>
    </div>

    <div id="banner-image">
        <img src="images/banner-image.png">
    </div>
</div>

<div id="banner-container-mobile">
    <p id="banner-title-mobile">Pricer</p>
    <p id="banner-subtitle-mobile">ТЕЛЕГРАМ-БОТ</p>
    <img src="images/banner-line.png" id="banner-line-mobile"/>
    <p id="banner-description-mobile">ЗА ДОПОМОГОЮ ЯКОГО ВИ ПЕРШИМ ДІЗНАЄТЕСЬ ПРО ЗНИЖЕННЯ ЦІНИ НА ТОВАР</p>
    
    <img src="images/banner-image.png" id="banner-image-mobile">
    <button id="banner-button-mobile">Почати користування</button>
</div>

<div id="functions-container">
    <p class="header"><span>Що вміє</span> Pricer?</p>

    <div id="functions-content">
        <div id="functions">
            <div class="function-description">
                <img src="images/function-1.png">
                <p>Відстежує ціни на вибрані товари</p>
            </div>

            <div class="function-description">
                <img src="images/function-2.png">
                <p>Повідомляє про зниження ціни, як тільки це станеться</p>
            </div>

            <div class="function-description">
                <img src="images/function-3.png">
                <p>Повідомляє про те, що обраного товару немає в наявності</p>
            </div>

            <div class="function-description">
                <img src="images/function-4.png">
                <p>Створює персональний сайт для зручності у користуванні</p>
            </div>

            <div class="function-description">
                <img src="images/function-5.png">
                <p>Показує історію цін на товар</p>
            </div>
        </div>

        <div id="functions-decoration">
        </div>
    </div>
</div>

<!--USING-->

<p class="header" id="video-header"><span>Як користуватися</span> Pricer?</p>

<div id="video">
    <img src="images/video.png">
</div>

<div id="chat-container">

    <div>
        <p id="chat-header">Найчастіші запитання від користувачів</p>
        <img src="images/arrow.png" id="chat-arrow">
    </div>

    <img src="images/chat.png" id="chat">

</div>


<!--SHOPS-->

@if (_shopCategories != null)
{
    <p class="header" id="shops-header"><span>Які магазини відстежує</span> Pricer?</p>

    <div id="shop-categories">
        @foreach (var shopCategory in _shopCategories)
        {
            <button
                @onclick="() => ChangeShopCategory(shopCategory)"
                class="shop-category @(shopCategory == _currentShopCategory ? "active-shop-category" : string.Empty)">
                
                @ResourceService.GetDefault(shopCategory.Name)
            </button>
        }
    </div>

    @if (_currentShopCategory != null)
    {
        <div id="shops-container">

            @foreach (var shop in _currentShopCategory.Shops)
            {
                <div class="shop">
                    <a href="https://@shop.Host" target="_blank" class="shop-content" style="background-color: @shop.BackgroundColor">
                        <p style="color: @shop.FontColor">@shop.Name</p>
                    </a>
                </div>
            }
        </div>
    }
}

<!--FOOTER-->

<div id="footer">

    <p class="footer-text">Всі права захищені</p>

    <img src="images/copyright.png">

    <p class="footer-text">Copyright 2023 Pricer</p>

</div>